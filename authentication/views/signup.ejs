<%- include top.ejs %>

    <div class="col-sm-6">
        <form action="/users/signup" method="post">
            <div class="form-group">
                <label for="username" class="form-label">Username: </label>
                <input id="username" name="username" type="text" class="form-control" placeholder="Digite o Username">
                <br>
            </div>
            <div class="form-group">
                <label for="password" class="form-label">Password: </label>
                <input id="password" name="password" type="password" class="form-control"
                    placeholder="Digite sua senha"> <br>
            </div>
            <div class="form-group">
                <label for="email" class="form-label">Email: </label>
                <input id="email" name="email" type="text" class="form-control" placeholder="Digite seu Email"> <br>
            </div>
            <div class="mb-3">
                <label for="profile" class="form-label">Perfil: </label>
                <select name="profile" class="form-control">
                    <option value="1">Usu√°rio</option>
                    <option value="2">Administrador</option>
                </select>
            </div>
            <input type="submit" value="save" class="btn btn-primary">
            <a href="/" class="btn btn-secondary">Cancelar</a>
        </form>
        <% if(message) { %>
            <div class=" alert alert-danger">
                <%= message %>
            </div>
            <% } %>
    </div>
