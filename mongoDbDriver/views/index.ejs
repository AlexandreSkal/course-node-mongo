<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1>
    <%= title %>
  </h1>
  <p>Welcome to <%= title %>
  </p>
  <p>
    <%= customers.length %> Clientes cadastrados!%>
  </p>
  <table>
    <thead>
      <tr>
        <td>name</td>
        <td>Age</td>
        <td>Region</td>
        <td>Actions</td>
      </tr>
    </thead>
    <tbody>
      <% customers.forEach(item=> {
        %>
        <tr>
          <td>
            <a href="/edit/<%= item._id%>" title="Editar">
              <%= item.name %>
            </a>
          </td>
          <td>
            <%= item.age %>
          </td>
          <td>
            <%= item.city %>
              <%= item.uf %>
          </td>
          <td> <a href="/edit/<%= item._id%>" title="Edit">
              <img src="/images/edit.png" alt="Edit">
            </a>
            <a href="/delete/<%= item._id%>" title="Delete"
               onclick=" return confirm('Are you sure that you want to delete this?')">
              <img src="/images/delete.png" alt="Delete">
            </a></td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <a href="/new">Register New</a>
</body>

</html>